<%= form_tag('/cupons/buscar_cupons', :remote => true, :method => 'get', :id => 'consultar_cupons_form') do %>
     <fieldset>
       <legend>Buscar Cupons</legend>
         <ol>
           <li>
            <%= label_tag(:cpf, "Digite o CPF:") %>
            <%= text_field_tag :cpf, nil, :class => 'input_text',:style =>'width:270px' %>		  
           </li>
         </ol>
     </fieldset>
     <div id="actions-bar">
       <%= submit_tag 'Pesquisar', {:class =>"button azul", :disable_with => "Aguarde..."} %>
     </div>
<% end %>

<div id="resultado" style="margin: 40px;"></div>


