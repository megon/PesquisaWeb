<%1.upto(total) do |numero|%>
  <tr id='<%= "filho_#{numero}"%>' style="display: none">
    <td height="40">Filho <%= f.label(numero)%></td>
    <td height="24">
      <div align="center">
        <label><%= f.radio_button "sexo_filho_#{numero}", "masculino"%><%= t :masculino%></label>
        <label><%= f.radio_button "sexo_filho_#{numero}", "feminino"%><%= t :feminino%></label>
        <%= f.radio_button "sexo_filho_#{numero}", "nil", :style => "display: none;", :checked => @passo.nil?%>
        <label class="error" for="passo_sexo_filho_1_masculino"></label>
      </div>
    </td>
    <td height="24">
      <div align="center"><font size="1">
        <%= f.text_field "data_nascimento_filho_#{numero}", :size => 10, :maxlength => 10 %>
        </font>
      </div>
    </td>
    <td height="24">
      <div align="center"> 
        <label><%= f.radio_button "mora_com_voce_filho_#{numero}", "sim"%><%= t :sim%></label>
        <label><%= f.radio_button "mora_com_voce_filho_#{numero}", "nao"%><%= t :nao%></label>
        <%= f.radio_button "mora_com_voce_filho_#{numero}", "nil", :style => "display: none;", :checked => @passo.nil?%>
      </div>
    </td>
  </tr>
<%end%>


