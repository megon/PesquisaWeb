<!DOCTYPE html>
<html>
<head>
  <title>PesquisaWeb</title>
  <%= stylesheet_link_tag :all %>
  <%= csrf_meta_tag %>
  <link href="/css/reset.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/css/application.css" media="screen" rel="stylesheet" type="text/css" />
  <link type="text/css" href="/css/smoothness/jquery-ui-1.8.11.custom.css" rel="Stylesheet" />	

  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery-ui-1.8.11.custom.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/i18n/jquery-ui-i18n.min.js" type="text/javascript"></script>
  <script src="/javascripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
  <script type="text/javascript" src="/javascripts/jquery.validate.js"></script>
</head>

<body>
	<div class="wrapper">
		<div id="content-wrapper">
			<div id="header">
				<h1 class="title">Sua Pesquisa</h1>
			</div><!-- header -->
			<div id="header-bar">
                <span id="step_definition" class="right">Você está no passo 1 de 2</span>
			</div>
			<div id="form-fields">	
              <%= yield %>
			</div><!-- form-fields -->
		</div><!-- content-wrapper -->
		<div id="footer">
			<p>Megon internet services - 2011</p>
		</div>
	</div><!-- wrapper -->

<script type="text/javascript">
  $(document).ready(function(){
    $("#passo_form").validate();
    $("#passo_telefone_residencial").mask("(99)9999-9999",{placeholder:" "});
  });

$(document).ready(function() {
  $(function() {
    $.datepicker.setDefaults( $.datepicker.regional[ "pt-BR" ] );
    $("#passo_data_nascimento_1_filho").datepicker({maxDate: "-10Y", changeMonth: true, changeYear: true});
  });
});
</script>
</body>
</html>
